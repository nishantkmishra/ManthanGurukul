@page "/signin"
@using System.ComponentModel.DataAnnotations
@using ManthanGurukul.BlazorApp.Models

<EditForm Model="@signInModel" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <div class="card shadow p-4 mx-auto" style="max-width: 400px;">
        <h4 class="text-center mb-4">Portal Sign In</h4>
        <div class="mb-3">
            <label for="mobileNo" class="form-label">Mobile No</label>
            <InputText @bind-Value="signInModel.MobileNo" id="mobileNo" class="form-control" placeholder="please enter mobile no"/>
            <ValidationMessage For="@(() => signInModel.MobileNo)" />
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <div class="input-group">
                <InputText @bind-Value="signInModel.Password"
                           id="password"
                           type="password"
                           class="form-control" placeholder="please enter password" />
            </div>
            <ValidationMessage For="@(() => signInModel.Password)" />
        </div>

        <div class="d-grid">
            <button class="btn btn-primary" type="submit">Sign In</button>
        </div>

        <div class="mt-3 text-center">
            <small>Need help? <a href="#">Contact us</a></small>
        </div>
    </div>
</EditForm>

